          <div class="list-group-item" id="hoadon">
            <%= __('ID')%>:
            <%= hoadon[i].ID %>
              <h6><%= __('Customer name')%>: <%= hoadon[i].customer.hoten %> - <%= __('Address')%>: <%= hoadon[i].customer.diachi %></h6>

