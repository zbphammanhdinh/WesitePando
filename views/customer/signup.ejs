<center onload="logError()">
  <h3> <%= __('Register')%> </h3>
  <form method="POST" action="signup" name="frm" >
    <p>
      <input type="text" name="firstname" placeholder="<%= __('First Name')%>" style="width:40%" required pattern="[^0-9~!@#$%^*()-=_+:\x22'<>?,.{}]{2,}" title="Chỉ có kí tự chữ cái" />
      <input type="text" name="lastname" placeholder="<%= __('Last Name')%>" style="width:40%" required pattern="[^0-9~!@#$%^*()-=_+:\x22'<>?,.{}]{2,}" title="Chỉ có kí tự chữ cái" />
    </p>
    <p>
      <input type="text" name="username" value="" placeholder="<%= __('Your Name')%>" style="width:80%" required pattern="[A-Za-z0-9]{1,10}" title="Không chứa kí tự đặc biệt" />
    </p>
    <p>
      <input type="password" name="password" placeholder="<%= __('Password')%>" style="width:80%" required/>
    </p>
    <p>
      <input type="password" onchange="checkPass()" name="re_password" placeholder="<%= __('Confirm Password')%>" style="width:80%" required/>
    </p>
    <p>
      <input type="text" name="diachi" placeholder="<%= __('Address')%>" style="width:80%" requiredpattern="[^~!@#$%^*()=_+:\x22'<>?{}]{5,}" title="Không chứa kí tự đặc biệt" />
    </p>
    <p>
      <input type="email" name="email" placeholder="<%= __('Email')%>" style="width:80%" required/>
    </p>
    <p>
      <input type="tel" name="phone" placeholder="<%= __('Phone Number')%>" style="width:80%" required pattern="[0-9]{1,11}" title="Chỉ có kí tự số" />
    </p>

    <button type="submit" class="button btn-primary submit" style="width:80%">Register</button>
  </form>
</center>


<script type="text/javascript">
  function checkPass() {
    var password = document.frm.password.value;
    var re_password = document.frm.re_password.value;

    if (password != re_password) {
      alert("<%= __('Please, re-Enter Your Password')%>");
      document.frm.re_password.value = "";
    }
  }


  function logError() {
    if (<%= error.length > 5%>) {
      alert("<%= error%>");
    }
  }
</script>
