<div class="topnav">
  <a class="active" style="width:80px;" href=""> <i class = "fa fa-home" ></i> </a>
  <div class="search-container">
    <form method="POST" action="findProduct">
      <input type="text" placeholder="Search.." name="idProduct">
    </form>
  </div>
